require "runfile-tasks"
require_relative 'lib/rspec_fixtures'

title   "RSpec Fixtures Developer Toolbelt"
summary "Runfile tasks for building the RSpec Fixtures gem"
version RSpecFixtures::VERSION

RunfileTasks::RubyGems.all 'rspec_fixtures'
RunfileTasks::Testing.rspec

help   "Run interactive console"
action :console, :c do
  run "bundle exec bin/console"
end

help   "Run the interactive example spec"
action :example do
  run "bundle exec rspec example"
end